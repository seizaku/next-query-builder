generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Profile {
  avatar  String
  company String
  zipCode String
  country String
  state   String
  city    String
  userId  Int    @unique
  age     Int
  sex     Gender
  user    User   @relation(fields: [userId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile?
}

enum Gender {
  Male
  Female
}
